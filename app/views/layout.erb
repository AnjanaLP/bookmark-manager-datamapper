<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Bookmark Manager</title>
  </head>
  <body>
    <% if flash[:errors] && !flash[:errors].empty? %>
      <ul>
        <% flash[:errors].each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    <% end %>
    <% if current_user %>
      Hello, <%= current_user.email %>
    <% end %>
    <%= yield %>
  </body>
</html>
